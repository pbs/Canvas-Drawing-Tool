{
  description: 'Stickerbook configuration schema',
  type: 'object',
  required: [
    'stickers',
    'background',
    'brush'
  ],
  properties: {
    stickers: {
      type: 'array',
      items: {
        type: 'string'
      }
    },

    background: {
      type: 'object',
      required: ['enabled'],
      properties: {
        enabled: {
          type: 'array',
          items: {
            type: 'string'
          }
        },
        default: {
          type: ['string', 'null']
        }
      }
    },

    brushes: {
      type: 'object',
      required: ['widths', 'enabled', 'colors'],
      properties: {
        widths: {
          type: 'array',
          items: {
            type: 'integer'
          }
        },
        enabled: {
          type: 'array',
          items: {
            type: 'string'
          }
        },
        colors: {
          type: 'array',
          items: {
            type: 'string'
          }
        },
        custom: {
          type: 'object'
        }
      }
    },

    mobileEnabled: {
      type: 'boolean'
    },

    stickerControls: {
      type: 'object',
      required: ['cornerColor', 'cornerSize'],
      properties: {
        cornerColor: {
          type: 'string'
        },
        cornerSize: {
          type: 'integer'
        }
      }
    },

    useDefaultEventHandlers: {
      type: 'boolean'
    }
  }
}
